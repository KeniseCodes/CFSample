<!DOCTYPE html>
<html>
<head>
  <title>Aruba Kiteboards</title>

   <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
   <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <script type="text/javascript src="jquery.raty.js"></script>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body data-spy="scroll" data-target=".navbar">
    
    <!-- Begin Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

      <div class="container-fluid">    
    
        <div class="nav navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>  

        <div class="navbar-collapse collapse">
          <div class="row">
          <div class="col-xs-12 col-md-4">
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to 'Aruba Kiteboards', root_path %></li>
            </ul> 
          </div>
          <div class="col-xs-12 col-md-8">
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%= form_tag("/products", method: "get") do %>
                  <%= label_tag(:q, "Search for:") %>
                  <%= text_field_tag(:q) %>
                  <%= submit_tag("Search") %>
                <% end %>
              </li>
              <li><%= link_to 'About', static_pages_about_path %></li>
              <li><%= link_to 'Products', products_path %></li>
              <li><%= link_to 'Contact', static_pages_contact_path %></li>
              <% if user_signed_in? %>
              <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
              </li>
            <% else %>
              <li>
              <%= link_to('Login/Sign Up', new_user_session_path)  %>  
              </li>
            <% end %>
            </ul> 
          </div>
      </div> 
      </div>
      </div>  
    </nav> <!-- End Nav -->
   
	<div class="jumbotron">
    <div class="jumbotron-text">
  		
  	</div>
  </div>

   <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

 
<%= yield %>

<footer>
  <h5>Copyright &copy; Aruba Kiteboarding 2015</h5>
</footer>

</body>
</html>
