<div class="container product">

<p id="notice"><%= notice %></p>

<h1 class="text-ctr">Listing Products</h1>
  <div class="row">
    <div class="">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image url</th>
            <th>Price</th>
            <th colspan="4"></th>
          </tr>
        </thead>

         <% cache do %> 
          <tbody>
            <% @products.each do |product| %>
             <% cache (product) do %>
                <%= render product %>
              <% end %>
            <% end %>
          </tbody>
        <% end %>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</div>
