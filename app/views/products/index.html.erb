<div class="container">

<p id="notice"><%= notice %></p>

<h1 class="text-ctr">Listing Products</h1>
  <div class="row">
    <div class="md-col-8 xs-col-10 col-centered">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image url</th>
            <th>Colour</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <%= render product %>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</div>
